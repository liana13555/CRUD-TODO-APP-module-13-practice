<table class="table">
    <thead>
        <tr>
            <th scope="col">ID</th>
            <th scope="col">Task</th>
            <th scope="col">Completed</th>
            <th scope="col">Actions</th>
        </tr>
    </thead>
    <tbody>
        {{#each data}}
        <tr>
            <th scope="row">{{id}}</th>
            <td>{{todo_name}}</td>
            <td>
                <input 
                    class="form-check-input" 
                    type="checkbox" 
                    name="toDoChange" 
                    data-id="{{id}}" 
                    {{#if completed}}checked{{/if}} 
                />
            </td>
            <td>
                <div class="btn-container">
                    <i data-id="{{id}}" data-name="{{todo_name}}"  class="bi-pencil btnAction btnChange btnEdit"></i>
                    <i data-id="{{id}}" class="bi-trash btnAction btnChange btnRemove"></i>
                </div>
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>